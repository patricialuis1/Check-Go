{
  "rewrites": [
    { "source": "/servicos", "destination": "/api/index.js" },
    { "source": "/servicos/:id", "destination": "/api/index.js" },
    { "source": "/novoServico", "destination": "/api/index.js" },
    { "source": "/actualizarServico", "destination": "/api/index.js" },
    { "source": "/apagarServico", "destination": "/api/index.js" },

    { "source": "/lojas", "destination": "/api/index.js" },
    { "source": "/lojas/:id", "destination": "/api/index.js" },
    { "source": "/novaLoja", "destination": "/api/index.js" },
    { "source": "/actualizarLoja", "destination": "/api/index.js" },
    { "source": "/apagarLoja", "destination": "/api/index.js" },

    
    { "source": "/(.*)", "destination": "/public/$1" }
  ]
}
